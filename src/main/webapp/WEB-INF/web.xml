<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>Enter Bank Online</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>


<!--============================================================
	Controller / Servlet
=============================================================-->
<servlet>
  <servlet-name>Controller</servlet-name>
  <servlet-class>ua.svitl.enterbank.servletproject.controller.Controller</servlet-class>
</servlet>

<servlet-mapping>
  <servlet-name>Controller</servlet-name>
  <url-pattern>/controller</url-pattern>
</servlet-mapping>
<!--===========================================================
    jsp config
============================================================-->
  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <page-encoding>UTF-8</page-encoding>
    </jsp-property-group>
  </jsp-config>
<!--============================================================
	Encoding support filter
=============================================================-->
<filter>
  <filter-name>EncodingFilter</filter-name>
  <filter-class>ua.svitl.enterbank.servletproject.controller.filter.EncodingFilter</filter-class>
  <init-param>
    <param-name>encoding</param-name>
    <param-value>UTF-8</param-value>
  </init-param>
</filter>

<filter-mapping>
  <filter-name>EncodingFilter</filter-name>
  <url-pattern>/templates/*</url-pattern>
  <servlet-name>Controller</servlet-name>
</filter-mapping>

<!--============================================================
	Security filter.
	1) admin: admin commands
	2) user: user commands
	3) all: commands for all roles
	4) out-of-control: commands without access control
	Delimiter - space/tab
=============================================================-->

<filter>
  <filter-name>AccessFilter</filter-name>
  <filter-class>ua.svitl.enterbank.servletproject.controller.filter.AccessFilter</filter-class>
  <init-param>
    <param-name>admin</param-name>
    <param-value>adminhome showusers showuseraccounts showformforuserupdate changeuserstatus changeaccountstatus</param-value>
  </init-param>
  <init-param>
    <param-name>user</param-name>
    <param-value>userhome payments showformforpayment disableaccount enableaccountrequest confirmpayment deletepayment</param-value>
  </init-param>
  <init-param>
    <param-name>all</param-name>
    <param-value>login logout nocommand changelang error default</param-value>
  </init-param>
  <init-param>
    <param-name>out-of-control</param-name>
    <param-value>login changelang error nocommand</param-value>
  </init-param>
</filter>

<filter-mapping>
  <filter-name>AccessFilter</filter-name>
  <servlet-name>Controller</servlet-name>
</filter-mapping>

<!--============================================================
	Context listener
=============================================================-->
<listener>
  <listener-class>ua.svitl.enterbank.servletproject.controller.listener.ContextListener</listener-class>
</listener>

<!--============================================================
	Error page
=============================================================-->


<error-page>
    <exception-type>ua.svitl.enterbank.servletproject.utils.exception.AppException</exception-type>
    <location>/WEB-INF/templates/error.jsp</location>
</error-page>
<error-page>
    <exception-type>ua.svitl.enterbank.servletproject.utils.exception.DaoException</exception-type>
    <location>/WEB-INF/templates/error.jsp</location>
</error-page>

<error-page>
  <exception-type>java.lang.Throwable</exception-type>
  <location>/WEB-INF/templates/error.jsp</location>
</error-page>
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/WEB-INF/templates/error.jsp</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.RuntimeException</exception-type>
    <location>/WEB-INF/templates/error.jsp</location>
  </error-page>

  <error-page>
    <error-code>401</error-code>
    <location>/WEB-INF/templates/error.jsp</location>
  </error-page>

<error-page>
  <error-code>403</error-code>
  <location>/WEB-INF/templates/error.jsp</location>
</error-page>

<error-page>
  <error-code>404</error-code>
  <location>/WEB-INF/templates/error.jsp</location>
</error-page>

<error-page>
  <error-code>500</error-code>
  <location>/WEB-INF/templates/error.jsp</location>
</error-page>

  <error-page>
    <error-code>503</error-code>
    <location>/WEB-INF/templates/error.jsp</location>
  </error-page>



<!--============================================================
    Session timing
=============================================================-->
<session-config>
    <session-timeout>15</session-timeout>
</session-config>
<!--==========================================================
    MIME TYPES
==========================================================-->
  <mime-mapping>
    <extension>js</extension>
    <mime-type>application/javascript</mime-type>
  </mime-mapping>

  <mime-mapping>
    <extension>css</extension>
    <mime-type>text/css</mime-type>
  </mime-mapping>

  <mime-mapping>
    <extension>jpg</extension>
    <mime-type>image/jpeg</mime-type>
  </mime-mapping>

  <mime-mapping>
    <extension>png</extension>
    <mime-type>image/png</mime-type>
  </mime-mapping>

  <mime-mapping>
    <extension>svg</extension>
    <mime-type>image/svg+xml</mime-type>
  </mime-mapping>

</web-app>